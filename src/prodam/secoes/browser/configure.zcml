<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser">

    <browser:page
        name="topic_view"
        for="*"
        class=".view.TopicView"
        template="templates/topic_view.pt"
        permission="zope2.View"
        />

    <browser:page
        name="section_view"
        for="*"
        class=".view.SectionView"
        template="templates/section_view.pt"
        permission="zope2.View"
        />

</configure>